<h1>Event details</h1>

  <div>
    <b><%= @event.name %></b>
    <br>
    <i><%= @event.description %></i>
    <br>
    <p><%= @event.event_date %></p>
    <br>
    <p><%= @event.event_time %></p>
    <br>
    <i>Posted by <%= @event.creator.first_name %> <%= @event.creator.last_name %> at <%= @event.created_at%></i>
  </div>