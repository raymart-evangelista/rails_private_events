            <p class="card-text"><%= event.description %></p>
            <p class="card-text"><%= event.event_date %></p>
            <p class="card-text"><%= event.event_time %></p>
            <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>